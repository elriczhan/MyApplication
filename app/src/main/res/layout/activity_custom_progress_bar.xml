<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:orientation="vertical"
    tools:context="com.example.elric.myapplication.CustomProgressBarActivity">

    <ProgressBar
        style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:max="100"
        android:padding="10dp"
        android:progress="50" />

    <com.example.elric.myapplication.customProgress
        android:id="@+id/cp_asd"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/cpb_grey"
        android:paddingLeft="20dp"
        android:paddingRight="20dp" />

    <SeekBar
        android:id="@+id/sk_asd"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:max="100" />

    <com.example.elric.myapplication.CustomButtonProgress
        android:id="@+id/cbp"
        android:layout_width="150dp"
        android:layout_height="150dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="match_parent">
        <com.example.elric.myapplication.CustomButtonProgress2
            android:id="@+id/cbp2"
            android:layout_width="150dp"
            android:layout_height="150dp" />

        <com.example.elric.myapplication.CustomButtonProgress3
            android:id="@+id/cbp3"
            android:layout_width="150dp"
            android:layout_height="150dp" />

    </LinearLayout>



</LinearLayout>
